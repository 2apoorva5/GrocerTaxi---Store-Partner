<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/order_item_product_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp"
        android:src="@drawable/thumbnail"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/order_item_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:text="@string/product_name_"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorTextDark"
        android:textSize="13sp"
        android:textStyle="normal"
        android:alpha="0.75"
        app:layout_constraintBottom_toTopOf="@id/order_item_product_quantity"
        app:layout_constraintTop_toTopOf="@id/order_item_product_image"
        app:layout_constraintEnd_toStartOf="@id/order_item_product_total_price"
        app:layout_constraintStart_toEndOf="@id/order_item_product_image"/>

    <TextView
        android:id="@+id/order_item_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:text="@string/x"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorTextDark"
        android:textSize="11sp"
        android:textStyle="normal"
        android:alpha="0.75"
        app:layout_constraintBottom_toBottomOf="@id/order_item_product_image"
        app:layout_constraintTop_toBottomOf="@id/order_item_product_name"
        app:layout_constraintStart_toEndOf="@id/order_item_product_image"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/text_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:text="@string/x"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorInactive"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@id/order_item_product_quantity"
        app:layout_constraintStart_toEndOf="@id/order_item_product_quantity"
        app:layout_constraintBottom_toBottomOf="@id/order_item_product_quantity"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/order_item_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:text="@string/_0_00"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorTextDark"
        android:textSize="11sp"
        android:textStyle="normal"
        android:alpha="0.75"
        app:layout_constraintTop_toTopOf="@id/order_item_product_quantity"
        app:layout_constraintStart_toEndOf="@id/text_x"
        app:layout_constraintBottom_toBottomOf="@id/order_item_product_quantity"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/order_item_product_mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:text="@string/_0_00"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/errorColor"
        android:textSize="10sp"
        android:textStyle="normal"
        android:alpha="0.75"
        app:layout_constraintTop_toTopOf="@id/order_item_product_quantity"
        app:layout_constraintStart_toEndOf="@id/order_item_product_price"
        app:layout_constraintBottom_toBottomOf="@id/order_item_product_quantity"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/order_item_product_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:text="@string/_0_00"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/colorTextDark"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/order_item_product_quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/order_item_product_quantity"/>

</androidx.constraintlayout.widget.ConstraintLayout>