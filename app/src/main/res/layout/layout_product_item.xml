<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/click_listener"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_image_container"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/product_in_stock"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/product_type_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_veg"
                android:scaleType="centerCrop"
                android:elevation="8dp"
                android:contentDescription="@string/app_name"
                app:layout_constraintBottom_toBottomOf="@id/product_image"
                app:layout_constraintStart_toStartOf="@id/product_image"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Product Name"
        android:textColor="@color/colorTextDark"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/product_image_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/product_image_container"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="₹ 200"
        android:textColor="@color/colorTextDark"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/product_image_container"
        app:layout_constraintTop_toBottomOf="@id/product_name"/>

    <TextView
        android:id="@+id/product_mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="₹ 240"
        android:textColor="@color/colorTextDark"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/product_price"
        app:layout_constraintBottom_toBottomOf="@id/product_price"
        app:layout_constraintTop_toTopOf="@id/product_price"/>

    <TextView
        android:id="@+id/product_offer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="20% off"
        android:textColor="@color/successColor"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_mrp"
        app:layout_constraintBottom_toBottomOf="@id/product_mrp"
        app:layout_constraintTop_toTopOf="@id/product_mrp"/>

    <TextView
        android:id="@+id/product_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:text="for 5 kilograms"
        android:textColor="@color/colorTextDark"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_image_container"
        app:layout_constraintTop_toBottomOf="@id/product_price"/>

    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:text="Category : "
        android:textColor="@color/colorTextDark"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/product_image_container"
        app:layout_constraintTop_toBottomOf="@id/product_unit"/>

    <TextView
        android:id="@+id/product_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Product Category"
        android:textColor="@color/infoColor"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_category"
        app:layout_constraintBottom_toBottomOf="@id/text_category"
        app:layout_constraintTop_toTopOf="@id/text_category"/>

    <TextView
        android:id="@+id/product_in_stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:text="In Stock"
        android:textColor="@color/successColor"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_image_container"
        app:layout_constraintTop_toBottomOf="@id/text_category"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorInactive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>